{
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "react/react-in-jsx-scope": "off",
        "react/display-name": ["off"],
        "space-before-function-paren": ["error"]
    }
}
